{
  "manifest_version": 3,
  "name": "No Shorts Allowed!",
  "description": "Stop degradating! No shorts anymore!",
  "version": "1.0.2",
  "icons": {
    "16": "/icons/ico16.png",
    "48": "/icons/ico48.png",
    "128": "/icons/ico128.png"
  },
  "content_scripts": [{
    "matches": ["https://www.youtube.com/*"],
    "js": ["no-shorts-allowed.js"]
  }],
  "permissions": ["activeTab"]
}